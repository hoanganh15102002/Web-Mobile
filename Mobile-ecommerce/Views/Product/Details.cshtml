@model Mobile_ecommerce.Models.EF.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb fw-semibold">
            <li class="breadcrumb-item"><a href="/Home/" class="text-decoration-none text-dark">Trang chủ</a></li>
            <li class="breadcrumb-item" aria-current="page"><a href="/Product/" class="text-decoration-none text-dark">Điện thoại</a></li>
            <li class="breadcrumb-item" aria-current="page">
                @if (ViewBag.Cate == 2)
                {
                    <span>Samsung</span>
                }
                else if (ViewBag.Cate == 1)
                {
                    <span>Iphone</span>
                }
                else if (ViewBag.Cate == 4)
                {
                    <span>Vertu</span>
                }
                else if (ViewBag.Cate == 3)
                {
                    <span>Vivo</span>
                }
                else if (ViewBag.Cate == 5)
                {
                    <span>Oppo</span>
                }
                else if (ViewBag.Cate == 6)
                {
                    <span>Nokia</span>
                }
                else if (ViewBag.Cate == 7)
                {
                    <span>Xiaomi</span>
                }
            </li>
            <li class="breadcrumb-item active" aria-current="page"> @Model.ProductName</li>
        </ol>
    </nav>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="row">
                <div class="col-6">
                    <div id="carouselExample" class="carousel slide">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="@Model.Images" class="d-block" alt="..." style="height: 350px;">
                            </div>
                            <div class="carousel-item">
                                <img src="@Model.ImageNote" class="d-block" alt="..." style="height: 350px;">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Hình trước</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Qua hình mới</span>
                        </button>
                    </div>
                    <div class="description">
                        @Html.Raw(Model.ProDes)
                    </div>
                </div>
                <div class="col-6">
                    <div class="product-info">
                        <p class="fs-4 fw-bold">
                            @Model.ProductName
                        </p>
                        <div class="d-flex">
                            <div class="rounded-4 border bg-danger p-1 ms-2 text-light">
                                <span>@Model.Color</span>
                                <span>@ViewBag.price</span>
                                <u>đ</u>
                            </div>
                        </div>
                        <div class="border d-flex align-items-baseline mt-2">
                            <span class="fa fa-location-arrow p-2" style="color:red"></span>
                            <a href="" class="text-decoration-none text-danger fw-bold">Có 5 cửa hàng còn hàng</a>
                        </div>
                        <div class="discount mt-2 bg-body-secondary">
                            <div class="row">
                                <div class="col-4">
                                    <div class="d-flex flex-column align-items-center">
                                        <span>Mua ngay </span>
                                        <span> @Model.Price </span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="d-flex flex-column align-items-center">
                                        <span>|</span>
                                        <span>Hoặc</span>
                                        <span>|</span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="d-flex flex-column align-items-center">
                                        <span>Trả góp 0%</span>
                                        <span>Trả góp qua thẻ</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-4 position-relative">
                        <span class="position-absolute khuyen-mai">Khuyến mãi</span>
                        <div class="card-header mt-2">
                            Tặng thêm <span class="fw-bold" style="color: red;">500.000đ</span> khi thu cũ đổi mới
                            (Xem chi tiết)
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold fs-5">Dịch vụ ưu đãi</h5>
                            <ul class="list-unstyled">
                                <li>
                                    <p class="card-text">Miễn phí Giao hàng siêu tốc trong 1 giờ (Xem chi tiết)</p>
                                </li>
                                <li>
                                    <p class="card-text">
                                        Giảm thêm tới <b>1.5%</b> cho thành viên của Di Động Việt
                                    </p>
                                </li>
                                <li>
                                    <p class="card-text">
                                        Giảm thêm tới <b>5% tối đa 500.000đ</b> khi thanh toán qua
                                        Kredivo
                                </li>
                                <li>
                                    <p class="card-text">
                                        Giảm thêm tới <b>30% tối đa 600.000đ</b> khi mở thẻ TPBank
                                        EVO
                                    </p>
                                </li>
                                <li>
                                    <p class="card-text">
                                        Chỉ từ 2k/ ngày có ngay Gói Bảo Hành 1 đổi 1 trong 1 năm
                                    </p>
                                </li>
                                <li>
                                    <p class="card-text">Trả góp <b>0%</b>qua HomeCredit</p>
                                </li>
                                <li>
                                    <p class="card-text">Tặng 200.000đ khi mua Loa Bluetooth JBL Charge 4</p>
                                </li>
                                <li>
                                    <p class="card-text">Trả góp trả trước<b>0%</b>qua Shinhan</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <a class="btn btn-danger input-group form-control" href="/ShoppingCart/AddtoCart/@Model.ProductID">Đặt ngay</a>
                    <div class="d-flex mt-2">
                        <button type="button" class="btn btn-primary form-control text-uppercase me-3">
                            Trả góp
                            0%
                        </button>
                        <button type="button" class="btn btn-primary form-control text-uppercase">
                            Trả góp qua
                            thẻ
                        </button>
                    </div>
                    <div class="card mt-4">
                        <div class="card-header mt-2">
                            Ưu đãi bán kèm
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li>
                                    <p class="card-text">
                                        Mua kèm Đồng hồ thông minh Xiaomi S1 Active giá chỉ còn
                                        <span class="text-danger"> 3.990.000đ</span> (Giá niêm yết: 4.990.000đ)
                                    </p>
                                </li>
                                <li>
                                    <p class="card-text">
                                        Mua kèm <b>Pin sạc dự phòng Innostyle Powergo 10.000mAh</b>
                                        giá
                                        chỉ còn <span class="text-danger">250.000đ</span> (Giá niêm yết: 459.000đ)
                                    </p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="details">
                @Html.Raw(Model.InfoDes)
            </div>
        </div>
    </div>
    <div class="review--pro row mt-2 g-2">
        <div class="col-md-6">
            @{ Html.RenderAction("ReviewPartial", "Product", new { productId = Model.ProductID }); }
            <p class="text-danger">@ViewBag.error</p>
        </div>
        <div class="col-md-6">
            @{ Html.RenderAction("ListReview", "Product"); }
        </div>     
    </div>

</div>