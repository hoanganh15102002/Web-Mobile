@model Mobile_ecommerce.Models.EF.Contact
@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mb-2">
    <div class="row mt-3 g-4">
        <div class="col-lg-6 col-md-8">
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
            {
                <fieldset class="border border-dark text-center border-0">
                    <legend class="fs-1 text-center">Đơn liên hệ</legend>
                    <div class="row g-2">
                        <div class="col-lg-2">
                            <label class="fw-bolder">@Html.LabelFor(m => m.tenkh)</label>
                        </div>
                        <div class="col-lg-10">
                            <p>@Html.TextBoxFor(m => m.tenkh, new { @class = "form-control" })</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="text-danger fw-bolder fs-4 ">@Html.ValidationMessageFor(m => m.tenkh)</p>
                        </div>
                        <div class="col-lg-2">
                            <label class="fw-bolder ">@Html.LabelFor(m => m.mail)</label>
                        </div>
                        <div class="col-lg-10">
                            <p>@Html.TextBoxFor(m => m.mail, new { @class = "form-control" })</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="text-danger fw-bolder fs-4 ">@Html.ValidationMessageFor(m => m.mail)</p>
                        </div>

                        <div class="col-lg-2">
                            <label class="fw-bolder">@Html.LabelFor(m => m.dienthoai)</label>
                        </div>
                        <div class="col-lg-10">

                            <p>@Html.TextBoxFor(m => m.dienthoai, new { @class = "form-control" })</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="text-danger fw-bolder fs-4 ">@Html.ValidationMessageFor(m => m.dienthoai)</p>
                        </div>

                        <div class="col-lg-2">
                            <label class="fw-bolder">@Html.LabelFor(m => m.tieude)</label>
                        </div>
                        <div class="col-lg-10">
                            <p>@Html.TextBoxFor(m => m.tieude, new { @class = "form-control" })</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="text-danger fw-bolder fs-4 ">@Html.ValidationMessageFor(m => m.tieude)</p>
                        </div>
                        <div class="col-lg-2">
                            <label class="fw-bolder pt-3">@Html.LabelFor(m => m.noidung)</label>
                        </div>
                        <div class="col-lg-10">
                            <p>@Html.TextAreaFor(m => m.noidung, new { rows = "6", @class = "form-control" })</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="text-danger fw-bolder fs-4 ">@Html.ValidationMessageFor(m => m.noidung)</p>
                        </div>
                        <div class="col-lg-5"></div>
                        <div class="col-lg-6 my-2">
                            <button type="submit" class="btn-primary btn input-group">Gửi</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
        <div class="col-lg-6 col-md-4">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m8!1m3!1d3918.2928073474422!2d106.59838101533447!3d10.86531956051636!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752b088de30f3b%3A0xd2140740d360f705!2zKEhVRkxJVCkgVFLGr-G7nE5HIMSQ4bqgSSBI4buMQyBOR0_huqBJIE5H4buuIC0gVElOIEjhu4xDIFRQLiBI4buSIENIw40gTUlOSCBDxqAgU-G7niBJSQ!5e0!3m2!1svi!2s!4v1639239625784!5m2!1svi!2s" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</div>
